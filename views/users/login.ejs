<% layout("/layout/boilerplate.ejs") %>

<body>
    <div class="contentsContainer">
        <form class="contents needs-validation" novalidate action="/users/validate" method="POST">
            <h2>Login</h2>
            <div class="mb-3">
                <label for="Input1" class="form-label">User Name</label>
                <input type="text" required class="form-control" id="Input1" name="username">
                <div class="invalid-feedback">Username Required</div>
            </div>
            <div class="mb-3">
                <label for="Input1" class="form-label">Password</label>
                <input type="text" required class="form-control" id="Input1" name="password">
                <div class="invalid-feedback">Password Required</div>
            </div>
            <div class="col-12">
                <button type="submit" class="btn btn-primary">Submit</button>
                <button class="btn btn-primary ms-5" style="width: fit-content;"><a href="/users/signup">New User</a></button>
            </div>
        </form>
    </div>
</body>