<% layout("layout/boilerplate.ejs") %>

<body>
    <div class="contentsContainer">
        <div class="contents">
            <h2>Edit Listing</h2>
            <form action="/listings/<%= data._id %>/edit?_method=PATCH" class="needs-validation" novalidate method="post" enctype="multipart/form-data" >    
                <div class="mb-3">
                    <label for="Input1" class="form-label">Title</label>
                    <input type="text" required class="form-control" id="Input1" value="<%= data.title %>" name="title">
                    <div class="invalid-feedback">Title Required</div>   
                </div>
                <div class="mb-3">
                    <label for="Input2" class="form-label">Description</label>
                    <textarea required class="form-control" id="Input2" name="description"><%= data.description %></textarea>
                    <div class="invalid-feedback">Description Required</div>
                </div>
                <div class="mb-3">
                    <label for="Input3" class="form-label">Preview</label>
                    <br>     
                    <img style="max-width: 300px;max-height: 300px;" src="<%= originalImageUrl %>" class="img-fluid rounded"
                        alt="Listing preview">

                </div>
                <div class="mb-3">
                    <label for="Input3" class="form-label">Change Image</label>
                    <input type="file" accept=".jpg,.png,.jpeg" class="form-control" id="Input3" name="image[url]">
                </div>
                <div class="row g-2">
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label for="Input4" class="form-label">Price</label>
                            <input required type="text" class="form-control" id="Input4" value="<%= data.price %>" name="price">
                            <div class="invalid-feedback">Price Required</div>
                        </div>
                    </div>
                    <div class="col-md-1"></div>
                    <div class="col-md-7">
                        <div class="mb-3">
                            <label for="Input5" class="form-label">Country</label>
                            <input required type="text" class="form-control" id="Input5" value="<%= data.country %>" name="country">
                            <div class="invalid-feedback">Country Required</div>
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="Input6" class="form-label">Location</label>
                    <input required type="text" class="form-control" id="Input6" value="<%= data.location %>" name="location">
                    <div class="invalid-feedback">Location Required</div>
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-danger">Edit</button>
                </div>
            </form>
        </div>
    </div>
</body>